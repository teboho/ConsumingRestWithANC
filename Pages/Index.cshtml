@page
@model IndexModel
@{
    ViewData["Title"] = "Cat Fact | Home page";
}

@{
    for (int i = 0; i < 2; i++)
    {
        <br />
    }
}

@{
    <div class="card text-center" style="width: 65%; margin-left: auto; margin-right: auto;">
        <img src="/cat.jpg" class="card-img-top">
        <div class="card-body">
            <h6 class="card-title display-6">Random cat fact xD</h6>
            <p class="card-body">@IndexModel.catFact.fact</p>
        </div>
        <div class="card-footer">
            <a href="/">Refresh</a> for one more
        </div>
    </div>
}
